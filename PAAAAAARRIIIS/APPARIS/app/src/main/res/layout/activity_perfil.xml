<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity">
    <TextView
        android:id="@+id/encabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMPLETE SUS DATOS"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:background="@color/purple_500"
        android:textColor="@color/black"
        android:padding="20dp"
        android:textSize="30dp"
        android:textStyle="bold|italic"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/perfil_imagen"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/pantalla_carga"
        android:layout_below="@+id/encabezado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"/>
    <EditText
        android:id="@+id/perfil_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/perfil_imagen"
        android:background="@drawable/textos"
        android:layout_margin="25dp"
        android:padding="15dp"
        android:hint="Ingrese su nombre"
        android:inputType="text"/>
    <EditText
        android:id="@+id/perfil_cedula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/perfil_nombre"
        android:background="@drawable/textos"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="15dp"
        android:hint="Ingrese su cedula"
        android:inputType="text"/>
    <EditText
        android:id="@+id/perfil_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/perfil_cedula"
        android:background="@drawable/textos"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="15dp"
        android:hint="Ingrese su telefono"
        android:inputType="phone"/>
    <EditText
        android:id="@+id/perfil_ciudad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/perfil_telefono"
        android:background="@drawable/textos"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="15dp"
        android:hint="Ingrese su ciudad"
        android:inputType="text"/>
    <EditText
        android:id="@+id/perfil_direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/perfil_ciudad"
        android:background="@drawable/textos"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="15dp"
        android:hint="Ingrese su direccion"
        android:inputType="text"/>
    <EditText
        android:id="@+id/perfil_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/perfil_direccion"
        android:background="@drawable/textos"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="15dp"
        android:hint="Ingrese su direccion"
        android:inputType="textEmailAddress"/>
    <Button
        android:id="@+id/perfil_guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/perfil_correo"
        android:background="@drawable/botones1"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:padding="5dp"
        android:textSize="25dp"
        android:text="Actualizar Infirmacion"/>

</RelativeLayout>