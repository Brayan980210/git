<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentUno">

    <TextView
        android:id="@+id/texto2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agrega Producto"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:background="@color/black"
        android:textColor="@color/white"
        android:padding="20dp"
        android:textSize="30dp"
        android:textStyle="bold|italic"/>
    <LinearLayout
        android:id="@+id/liner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texto2"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/comida"
            android:layout_width="166dp"
            android:layout_height="140dp"
            android:src="@drawable/food" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="FOOD"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/refrescos"
            android:layout_width="166dp"
            android:layout_height="140dp"
            android:src="@drawable/drink"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="REFRESCOS"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/postres"
            android:layout_width="166dp"
            android:layout_height="140dp"
            android:src="@drawable/cake"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="POSTRES"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/alcohol"
            android:layout_width="166dp"
            android:layout_height="140dp"
            android:src="@drawable/liqueur"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="LICORES"
            android:textSize="20dp"/>


    </LinearLayout>

</RelativeLayout>